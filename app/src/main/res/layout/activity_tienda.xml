<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TiendaActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTienda"
        android:layout_width="match_parent"
        android:layout_height="616dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="40dp"
        android:background="#FFFFFF"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1"
        app:layout_constraintBottom_toTopOf="@+id/btnComprarArticulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComprarArticulos"
        android:layout_width="135dp"
        android:layout_height="51dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="76dp"
        android:text="Comprar"
        android:background="@drawable/boton_azul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnVolverTienda" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVolverTienda"
        android:layout_width="135dp"
        android:layout_height="51dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/boton_gris"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tituloTienda"
        android:layout_width="83dp"
        android:layout_height="38dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="27dp"
        android:text="Tienda"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPuntos"
        android:layout_width="145dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="Puntos:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>