<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TokenRegistroActivity">

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnVerificar"
      android:layout_width="173dp"
      android:layout_height="61dp"
      android:layout_marginBottom="56dp"
      android:background="@drawable/boton_azul"
      android:text="Verificar"
      app:layout_constraintBottom_toTopOf="@+id/btnVolverToken"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnVolverToken"
      android:layout_width="173dp"
      android:layout_height="61dp"
      android:layout_marginBottom="188dp"
      android:background="@drawable/boton_gris"
      android:text="Volver"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="245dp"
      android:layout_height="80dp"
      android:layout_marginStart="165dp"
      android:layout_marginEnd="165dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.429">

    <EditText
        android:id="@+id/editToken"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Token"
        android:inputType="number"
        android:text="" />
  </LinearLayout>

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="240dp"
      android:layout_height="126dp"
      android:layout_marginTop="102dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/token" />

  <TextView
      android:id="@+id/textoToken"
      android:layout_width="316dp"
      android:layout_height="41dp"
      android:layout_marginStart="85dp"
      android:layout_marginTop="23dp"
      android:layout_marginEnd="4dp"
      android:layout_marginBottom="23dp"
      android:fontFamily=""
      android:text="Tonek enviado a:"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>